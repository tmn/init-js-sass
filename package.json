{
  "name": "init-js-sass",
  "version": "1.0.0",
  "description": "",
  "main": "js/app.js",
  "scripts": {
    "prebuild:css": "node-sass scss/core.scss static/bundle.css",
    "build:css": "postcss --use autoprefixer < static/bundle.css | postcss --use cssnano > static/bundle.min.css",
    "build:js": "webpack -d js/app.js static/bundle.js",
    "build": "npm run build:css & npm run build:js",
    "watch:css": "nodemon --quiet --watch scss/ --ext scss --exec npm run build:css",
    "watch:js": "npm run build:js -- -w",
    "watch": "npm run watch:css & npm run watch:js"
  },
  "author": {
    "name": "Tri Nguyen",
    "email": "mail@trimn.net",
    "url": "http://github.com/tmn"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://tmn.mit-license.org"
    }
  ],
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "cssnano": "^3.8.1",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^2.6.0",
    "webpack": "^2.1.0-beta.27"
  }
}
