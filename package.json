{
  "name": "init-js-sass",
  "version": "1.0.0",
  "description": "",
  "main": "js/app.js",
  "scripts": {
    "build": "npm run build:css & npm run build:js",
    "build:css": "node-sass scss/core.scss static/bundle.css && npm run postcss",
    "build:js": "browserify -g uglifyify js/app.js -o static/bundle.js",

    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "node-sass scss/core.scss -wo static/bundle.css",
    "watch:js": "watchify js/app.js -o static/bundle.js -v",

    "postcss": "postcss --use autoprefixer --use cssnano -o static/bundle.css static/bundle.css"
  },
  "author": {
    "name": "Tri Nguyen",
    "email": "mail@trimn.net",
    "url": "http://github.com/tmn"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://tmn.mit-license.org"
    }
  ],
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "cssnano": "^3.8.1",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^2.6.0",
    "webpack": "^2.1.0-beta.27"
  }
}
